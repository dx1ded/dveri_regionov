extends layouts/page
include _mixins

block config
  - page.title = "Гарантия - Дверной Регион"

block styles
  +style("styles/text-page.css")

include @cmps/Burger/burger
include @cmps/Breadcrumbs/breadcrumbs

block partials
  +burger

  include @cmps/Header/header
  main
    +breadcrumbs(
      {
        name: "Главная",
        path: "/"
      },
      {
        name: "Гарантия",
        path: "/garantee"
      }
    )
    include @partials/garantee/service
    include @partials/garantee/defect
    include @partials/garantee/refuse
  include @cmps/Footer/footer

block scripts
  +script("scripts/text-page.js")
