mixin counter
  .counter
    input.counter__display(type="number" value="1" min="1" max="99" required)
    input.counter__action.counter__action--decrement.btn-reset(type="button" value="-" aria-label="Вычесть одну штуку")
    input.counter__action.counter__action--increment.btn-reset(type="button" value="+" aria-label="Добавить одну штуку")
