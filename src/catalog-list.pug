extends layouts/page
include _mixins

block config
  - page.title = "Каталог Типа - Дверной Регион"

block styles
  +style("styles/catalog-list.css")

include @cmps/Burger/burger
include @cmps/Breadcrumbs/breadcrumbs

block partials
  +burger

  include @cmps/Header/header
  main
    +breadcrumbs(
      {
        name: "Главная",
        path: "/"
      },
      {
        name: "Каталог",
        path: "/catalog"
      },
      {
        name: "Тип продукции",
        path: "/catalog-list"
      }
    )
    include @partials/catalog-list/list
    include @cmps/Pagination/pagination
  include @cmps/Footer/footer

block scripts
  +script("scripts/catalog-list.js")
