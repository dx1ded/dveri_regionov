extends layouts/page
include _mixins

block config
  - page.title = "Каталог - Дверной Регион"

block styles
  +style("styles/catalog.css")

include @cmps/Burger/burger
include @cmps/Breadcrumbs/breadcrumbs

block partials
  +burger

  include @cmps/Header/header
  main
    +breadcrumbs(
      {
        name: "Главная",
        path: "/"
      },
      {
        name: "Каталог",
        path: "/catalog"
      }
    )
    include @partials/catalog/list
  include @cmps/Footer/footer

block scripts
  +script("scripts/text-page.js")
